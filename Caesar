Mes = "hello"
Table = 'helo'
Key = -5

newString=''
n=0

for count in Table:
    n+=1
 

for charM in Mes:
    for k,charT in enumerate(Table):
        if charM==charT:
            break


    if Key>=0:
        i=(k+Key)//n
        nc=(k+Key)-i*n
        newString+=Table[nc]
        
    if  Key<0:
        i=(k+Key)//n
        nc=(k+Key)+(i+1)*(-n)
        newString+=Table[nc]


print(newString)            
assert newString=="oheel"
            
